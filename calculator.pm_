package Calculator_;

require Exporter;
@ISA = qw(Exporter);
@EXPORT = qw(add sub_ mul div);

sub add {
	my ($a, $b) = @_;
	printf "$a + $b = %d \n", $a + $b;
}

sub sub_ {
	my ($a, $b) = @_;
	printf "$a - $b = %d\n", $a - $b;
}

sub mul {
	my ($a , $b) = @_;
	printf "$a * $b = %d\n", $a * $b;
}

sub div {
	my ($a, $b) = @_;
	printf "$a / $b = %.3f\n", $a / $b;
}

1;